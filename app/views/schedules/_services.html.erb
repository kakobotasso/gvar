<h2>Resultado da pesquisa</h2>
<table cellspadding="0" cellspacing="0" width="100%">
  <tr border="0">
  <th width="20%"><span>Nome</span></th>
  <th width="20%"><span>Tempo</span></th>
  <th width="20%"><span>Valor</span></th>
  <th width="20%"><span>Nº de Dias</span></th>
  <th width="20%"><span>Ativo</span></th>
  <th width="20%"></th>
  </tr>

  <% schedules.each do |schedule| %>
    <tr onclick="location.href = '<%= edit_schedule_path(schedule) %>'">
      <td width="20%"><span><%= schedule.name %></span></td>
      <td width="20%"><span><%= schedule.estimated_time %></span></td>
      <td width="20%"><span><%= number_to_currency schedule.default_value %></span></td>
      <td width="20%"><span><%= schedule.number_days %></span></td>
      <td width="20%"><span><%= schedule.active %></span></td>
      <td width="20%"><span class="centralizaBts"><%= link_to 'Deletar', schedule, method: :delete, data: { confirm: 'Deseja realmente exlcuir este serviço do sistema?' }, class: "btVoltarExcluirForm" %></span></td>
    </tr>
  <% end %>
</table>

