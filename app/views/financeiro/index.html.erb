<h1>Financeiro</h1>

<div id="guardaPesquisa">
  <%= form_for(@releases = '') do |f| %>
    <ul>
      <li class="noPaddingHomes">
        <label for="campoNome" class="escondidoPesquisaAvancada">E-mail</label>
        <%= f.text_field :login, :class => "inputGde input", :id => 'campoNome' %>
      </li>

      <li class="liPesquisaAvancada">
        <%= link_to 'Pesquisa avancada', 'javascript:void(0);', :class => 'pesquisaAvancada', :id => 'btPesquisaAvancada' %>
        <%= f.submit 'Pesquisar', :class => 'btEditarForm', :id => 'btRealizarPesquisa' %>
      </li>
    </ul>
  <% end %>

<%= link_to "Novo pagamento", novo_pagamento_path, class: "btEnviarForm" %>

</div>

<div id="guardaAtividadesRecentes">
  <h2>Recebimentos mais proximos</h2>
  <% @release.each do |rel| %>
    <p>
      <span><%= rel.name %></span>
      <span><%= rel.total_amount %></span>
      <span>DT Venc</span>
      <%= link_to 'Visualizar', "javascript:void(0);", :class => 'btVoltarForm' %>
    </p>
  <% end %>
</div>

<div id="guardaResultadoPesquisa">
  <h2>Resultado da pesquisa</h2>

  <table cellspadding="0" cellspacing="0" width="100%">
