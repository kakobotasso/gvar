<div class='inscrSubtitulo'>
	<span>Parcelas</span>
</div>
<div id='guardaResultadoPesquisa' style='display:block;'>
<table cellspadding="0" cellspacing="0" cellpadding="0" width="100%">
  <tr>
    <th><span>Nº</span></th>
    <th><span>Valor da Parcela</span></th>
    <th><span>Vencimento</span></th>
    <th><span>Situação</span></th>
  </tr>

  <% release.instalments.each do |i| %>
    <tr>
      <td><%= i.number %></td>
      <td><%= number_to_currency i.amount %></td>
      <td><%= date_to_view i.expiration_date %></td>
      <td><%= i.status %></td>
    </tr>
  <% end %>
</table>
</div>