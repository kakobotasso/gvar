<h2>Resultado da pesquisa</h2>
<table cellspadding="0" cellspacing="0" width="100%">
  <tr border="0">
  <th width="20%"><span>Nome</span></th>
  <th width="20%"><span>Tempo</span></th>
  <th width="20%"><span>Valor</span></th>
  <th width="20%"><span>Nº de Dias</span></th>
  <th width="20%"><span>Ativo</span></th>
  <th width="20%"></th>
  </tr>

  <% services.each do |service| %>
    <tr onclick="location.href = '<%= edit_service_path(service) %>'">
      <td width="20%"><span><%= service.name %></span></td>
      <td width="20%"><span><%= service.estimated_time %></span></td>
      <td width="20%"><span><%= number_to_currency service.default_value %></span></td>
      <td width="20%"><span><%= service.number_days %></span></td>
      <td width="20%"><span><%= service.active %></span></td>
      <td width="20%"><span class="centralizaBts"><%= link_to 'Deletar', service, method: :delete, data: { confirm: 'Deseja realmente exlcuir este serviço do sistema?' }, class: "btVoltarExcluirForm" %></span></td>
    </tr>
  <% end %>
</table>

